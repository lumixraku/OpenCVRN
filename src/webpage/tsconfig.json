{
  "compilerOptions": {
    "noEmitHelpers": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@root/*":[
        "*"
      ],
      "@game/*":[
        "game/*"
      ],
      "actions/*": [
        "app/actions/*"
      ],
      "selectors/*": [
        "app/selectors/*"
      ],
      "ui/*": [
        "app/ui/*"
      ],
      "logger": [
        "util/logger"
      ],
    }
  },
  "exclude": [
    "node_modules"
  ]
}